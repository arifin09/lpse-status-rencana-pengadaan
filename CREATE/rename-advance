
#!/bin/bash
read -p "Please type something to find: " first
read -p "Please type replace to: " second
read -p "in folder and subfolder: " three

red_color='\033[0;31m'
# echo "start"
find "$three/." -execdir rename -v "s/$first/$second/" '{}' \+
echo "finish"

echo "You've repalce: ${red_color}\"$first\""
echo "You've with: ${red_color}\"$second\""



